<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="FLDC2021_CodeSniffer" xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">
    <description>DrupalCamp Florida 2021 - PHP Coding Standards</description>

    <arg name="extensions" value="engine,php,module,inc,install,profile,theme,yml" />
    <arg name="basepath" value="." />
    <arg name="colors" />
    <arg name="parallel" value="75" />
    <arg value="np" />
    <rule ref="Drupal" />
    <rule ref="DrupalPractice" />
    <exclude-pattern>scripts/</exclude-pattern>
    <exclude-pattern>web/autoload.php</exclude-pattern>
    <exclude-pattern>web/index.php</exclude-pattern>
    <exclude-pattern>web/update.php</exclude-pattern>
    <exclude-pattern>web/core/*</exclude-pattern>
    <exclude-pattern>web/modules/contrib/*</exclude-pattern>
    <exclude-pattern>web/profiles/contrib/*</exclude-pattern>
    <exclude-pattern>web/sites/</exclude-pattern>
<!--    <exclude-pattern>web/sites/default/files/*</exclude-pattern>-->
    <exclude-pattern>web/themes/contrib/*</exclude-pattern>
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>config/</exclude-pattern>

</ruleset>
